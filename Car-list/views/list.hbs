{{>navbar}}
<h2 class="m-3">list</h2>
<table class="table table-striped table-bordered container mx-auto m-5">
    <thead>
    <tr>
        <th>l.p.</th>
        <th>ID</th>
        <th>Insurance</th>
        <th>Gas</th>
        <th>4x4</th>
        <th>Delete record</th>
    </tr>
    </thead>
    <tbody>
    {{#each records}}
        <tr class="fw-bold">
            <td class="text-info">{{@index}}</td>
            <td class="text-info">{{_id}}</td>
            <td class="
                {{#if insurance}}
                    text-success
                {{else}}
                    text-danger
                {{/if}}
            ">{{insurance}}</td>
            <td class="
                {{#if gas}}
                    text-success
                {{else}}
                    text-danger
                {{/if}}
            ">{{gas}}</td>
            <td class="
                {{#if fourbyfour}}
                    text-success
                {{else}}
                    text-danger
                {{/if}}
            ">{{fourbyfour}}</td>
            <td class="col-sm-2">
                <form action="/handleDeleteCar" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger container-fluid">Delete</button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
