{{>navbar}}
<h2 class="m-3">add</h2>
{{#if message}}
    <div class="alert alert-success show container ms-3" role="alert">
        {{message}}
    </div>
{{/if}}
{{#if error}}
    <div class="alert alert-danger" role="alert">
        {{error}}
    </div>
{{/if}}
<form class="ms-4" action="/handleAddCar" method="POST">
    <input type="hidden" name="test" value="test">
    <div class="form-group mb-3">
        <label class="form-check-label" for="insurance">
            <input type="checkbox" class="form-check-input" id="insurance" name="insurance">
            Insurance
        </label>
    </div>
    <div class="form-group mb-3">
            <input type="checkbox" class="form-check-input" id="gas" name="gas">
        <label class="form-check-label" for="gas">
            Gas
        </label>
    </div>
    <div class="form-group mb-3">
        <label class="form-check-label" for="damaged">
            <input type="checkbox" class="form-check-input" id="damaged" name="damaged">
            Damaged
        </label>
    </div>
    <div class="form-group mb-3">
        <label class="form-check-label" for="fourbyfour">
            <input type="checkbox" class="form-check-input" id="fourbyfour" name="fourbyfour">
            4x4
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>